<Page x:Class="trivia_client.CreateRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trivia_client"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="CreateRoomPage">

    <Grid>
        <Frame x:Name="backgroundPage"/>
        <Grid Margin="40, 40, 40, 100">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--header-->
            <Label Content="CREATE ROOM" Grid.Row="0" Foreground="White" FontFamily="Arial Black" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" />

            <!--list of rooms-->
            <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="150, 10, 150, 10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="room name:" Grid.Column="0" Grid.Row="0" Foreground="White" FontSize="14" VerticalAlignment="Center" BorderBrush="#00000000"/>
                <TextBox Name="roomNameInput" Grid.Column="1" Grid.Row="0" Margin="10" Padding="5" Height="25" BorderBrush="Transparent"/>
                <Label Content="max users:" Grid.Column="0" Grid.Row="1" Foreground="White" FontSize="14" VerticalAlignment="Center" BorderBrush="#00000000"/>
                <TextBox Name="maxUsersInput" Grid.Column="1" Grid.Row="1" Margin="10" Padding="5" Height="25" BorderBrush="Transparent"/>
                <Label Content="qustion count:" Grid.Column="0" Grid.Row="2" Foreground="White" FontSize="14" VerticalAlignment="Center" BorderBrush="#00000000"/>
                <TextBox Name="questionCountInput" Grid.Column="1" Grid.Row="2" Margin="10" Padding="5" Height="25" BorderBrush="Transparent"/>
                <Label Content="answer time out:" Grid.Column="0" Grid.Row="3" Foreground="White" FontSize="14" VerticalAlignment="Center" BorderBrush="#00000000"/>
                <TextBox Name="answerTimeoutInput" Grid.Column="1" Grid.Row="3" Margin="10" Padding="5" Height="25" BorderBrush="Transparent"/>
                <Label Name ="Error" Visibility="Hidden" Content="Create Room Faild" Grid.ColumnSpan="2" Grid.Row="4" Foreground="Red" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" />

            </Grid>

            <!--buttons-->
            <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Name="backButton" Content="back" Click="backButton_Click" FontSize="16" Height="35" Width="150"  Margin="10"/>
                <Button Name="SendButton" Content="create" Click="SendButton_Click" FontSize="16" Height="35" Width="150"  Margin="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
